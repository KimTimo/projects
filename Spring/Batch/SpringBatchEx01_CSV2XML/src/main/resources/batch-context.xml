<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch https://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="jobRepository" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean"/>
	
	<bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref="jobRepository"/>
	</bean>
	<!-- 읽기를 담당할 객체 등록 -->
	<bean id="flatFileItemReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
		<!-- 원본파일 -->
		<property name="resource" value="classpath:Result.csv"/>
		<!-- 1줄을 처리할 내용 -->
		<property name="lineMapper">
			<!-- DefaultLineMapper를 이용하여 처리 하겠다 -->
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<!-- 1줄을 처리할 클래스 지정 -->
				<property name="fieldSetMapper">
					<bean class="kr.green.batch.service.ExamResultFieldSetMapper"/>
				</property>
				<!-- 1줄을 파싱할때 구분자 지정 -->
				<property name="lineTokenizer">
					<bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="delimiter" value="|"/>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	<!-- 쓰기를 담당할 객체 등록 -->
	<bean id="xmlItemWriter" class="org.springframework.batch.item.xml.StaxEventItemWriter">
		<!-- 어디에 저장할까요? -->
		<property name="resource" value="file:xml/examResult2.xml"/>
		<!-- 루트태그지정 -->
		<property name="rootTagName" value="ExamResults"/>
		<!-- 마샬링에 사용할 VO를 지정해 준다. -->
		<property name="marshaller">
			<bean class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
				<property name="classesToBeBound">
					<list>
						<value>kr.green.batch.vo.ExamResult</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>
	<!-- 선택사항 : ItemProcessor 등록 -->
	<bean id="itemProcessor" class="kr.green.batch.service.ExamResultItemProcessor"/>
	<!-- 선택사항 : JobExecutionListener 등록 -->
	<bean id="jobListener" class="kr.green.batch.service.ExamResultJobListener"/>
	
	<!-- 트랜젝션 메니저 등록 -->
	<bean id="transactionManager" class="org.springframework.batch.support.transaction.ResourcelessTransactionManager"/>
	
	<!-- 실제 실행할 일 등록 -->
	<batch:job id="examResultJob">
		<!-- 첫번째 작업 -->
		<batch:step id="step1">
			<batch:tasklet transaction-manager="transactionManager">
				<!-- flatFileItemReader로 읽고 xmlItemWriter로 쓰기를 할때 1개당 itemProcessor를 실행해라 간격은 10/1000초를 둬라 -->
				<batch:chunk reader="flatFileItemReader" writer="xmlItemWriter" processor="itemProcessor" commit-interval="10"/>
			</batch:tasklet>
		</batch:step>
		<!-- 작업에 리스너 붙이기 -->
		<batch:listeners>
			<batch:listener ref="jobListener"/>
		</batch:listeners>
	</batch:job>
</beans>
